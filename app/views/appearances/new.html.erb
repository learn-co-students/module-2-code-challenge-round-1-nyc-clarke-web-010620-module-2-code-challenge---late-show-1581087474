<h1>Create New Appearance</h1>

<% if flash[:error] %>
  <% flash[:error].each do |msg| %>
  <h2 style="color:red"> <%= msg %></h2>
<% end%>
<% end%>


<%= form_for @appearance do |f| %>
<%= f.label :guest %>
<%= f.collection_select :guest_id, @guests, :id, :name %> <br>

<%= f.label :episode %>
<%= f.collection_select :episode_id, @episodes, :id, :date %> <br>

<%= f.label :rating %>
<%= f.number_field :rating %> <br>

<%= f.submit%>

<% end%>