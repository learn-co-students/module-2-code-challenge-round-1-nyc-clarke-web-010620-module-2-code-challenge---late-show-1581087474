<h1>New Appearance</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end%>
<% end%>

<%= form_for @appearance do |f| %>

  <%= f.label :guest, "Guest" %>
  <%= f.collection_select(:guest_id, @guests, :id, :name) %>

  <%= f.label :episode, "Episode" %>
  <%= f.collection_select(:episode_id, @episodes, :id, :number) %>

  <%= f.label :rating, "Rating" %>
  <%= f.number_field :rating %>

  <%= f.submit %>
<% end %>