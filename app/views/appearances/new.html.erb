<h2>New Appearance</h2>
<%= form_for @app do |f| %>

    <%= f.label :guest %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>

    <%= f.label :episode %>
    <%= f.collection_select :episode_id, @episodes, :id, :date %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit %>
<%end%>
<%if @errors%>
    <% @errors.each do |error| %>
        <p><%= error %></p>
    <%end%>
<%end%>
