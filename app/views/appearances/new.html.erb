<h1> Create New Appearances </h1><br>
<%= flash[:errors] %>
<%= form_for @appearance do |f| %>
    <%= f.collection_select(:guest_id, Guest.all, :id, :name) %>
    <%= f.collection_select(:episode_id, Episode.all, :id, :date) %> <br>
     <%= f.label 'Rating' %><br>
      <%= f.text_field :appearance_rating %><br>
      <%= f.submit "Submit Appearance" %>
    <% end %>
