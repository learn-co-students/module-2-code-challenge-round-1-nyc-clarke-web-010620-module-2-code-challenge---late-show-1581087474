<h1>New Apperance</h1>
<%if flash[:errors]%>
<%flash[:errors].each do |error|%>
<%=error%>
<%end%>
<%end%>






<%= form_for @apperance do |f|%>
<%=f.label :guest_id%>
<%=f.collection_select :guest_id, @guests, :id, :name%>

<%=f.label :episode_id%>
<%=f.collection_select :episode_id, @episodes, :id, :date%>

<%=f.label :rating%>
<%=f.number_field :rating%>

<%=f.submit%>


<%end%>
